<%- include("header") -%>

<!-- class="box" id="heading" -->

  <h1 class="user">Hey <%= user.name %></h1>
  <div class="list-name">
    <h1 class="title"><%= listTitle %> </h1>
  </div>

  <div class="box">


  <%  newListItems.forEach(function(item){ %>

    <form action="/delete" method="post">
      <div class="item">
        <input type="checkbox" name="checkbox" value="<%=item.id%>" onChange="this.form.submit()">
        <p><%=item.name%></p>
      </div>
      <input type="hidden" name="userId" value="<%= user.id %>"></input>
    </form>
  <%  }) %>


  <div class="new-item">
      <form class="item" action="/" method="post">
        <input class="additem" type="text" name="newItem" placeholder="New Item" autocomplete="off">
        <button type="submit" name="userId" value="<%= user.id %>">+</button>
      </form>
    </div>    
  </div>
<%- include("footer") -%>
